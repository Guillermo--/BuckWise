<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name= "AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"></style>
    <style name="RaisedButton">
        <item name="android:textColor">#fff</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/ripple_raised_button</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:padding">5dp</item>
        <item name="tabSelectedTextColor">@color/accent</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tabTextColor</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>
