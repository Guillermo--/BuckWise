<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <RelativeLayout
        android:id="@+id/budget_list_row_firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/budgetList_iconArrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@null"
            android:tint="@color/accent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_right_bold_circle_outline_grey600_24dp"/>
        <TextView
            android:id="@+id/budget_list_row_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Category"
            android:layout_centerVertical="true"
            android:textColor="@color/textDark"
            android:layout_toRightOf="@+id/budgetList_iconArrow"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/budget_list_row_secondLine"
        android:layout_below="@+id/budget_list_row_firstLine"
        android:layout_width="wrap_content"
        android:paddingLeft="25dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/budget_list_row_actualAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/textDarker"
            android:layout_alignParentStart="true"
            android:text="$500.00"/>
        <TextView
            android:id="@+id/budget_list_row_outOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="out of"
            android:textColor="@color/textDarker"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/budget_list_row_actualAmount"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/budget_list_row_initialAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/textDarker"
            android:layout_centerInParent="true"
            android:text="$1,000.00"
            android:layout_toRightOf="@+id/budget_list_row_outOf"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/budget_list_row_iconEdit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:tint="@color/textDarker"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_dots_vertical_grey600_24dp"/>
    </RelativeLayout>
</RelativeLayout>