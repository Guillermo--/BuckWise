<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    tools:context=".Dashboard">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/DrawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base">
            <RelativeLayout
                android:minHeight="?attr/actionBarSize"
                android:background="@color/statusBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:elevation="2dp"
                android:id="@+id/expense_toolbarBig">
                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expense_toolbarSmall">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/expense_iconHamburger"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:tint="@color/textLight"
                            android:src="@drawable/ic_menu_grey600_24dp"/>
                        <TextView
                            android:id="@+id/dashboard_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textLight"
                            android:text="Overview"
                            android:textSize="20sp"
                            android:layout_toRightOf="@id/expense_iconHamburger"
                            android:layout_marginStart="15dp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/expense_toolbarSmall">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04"
                        android:textColor="@color/textLight"
                        android:textSize="60sp"
                        android:id="@+id/dashboard_dateDay"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:id="@+id/dashboard_dateDayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textSize="18sp"
                        android:textColor="@color/textLight"
                        android:layout_toRightOf="@id/dashboard_dateDay"
                        android:layout_marginTop="25dp"/>
                    <TextView
                        android:id="@+id/dashboard_dateMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feb"
                        android:textSize="18sp"
                        android:layout_toRightOf="@id/dashboard_dateDay"
                        android:layout_alignBaseline="@id/dashboard_dateDay"
                        android:textColor="@color/textLight" />


                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/dashboard_cardView"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_285sdp"
                android:layout_height="@dimen/_130sdp"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="@dimen/_130sdp"
                android:elevation="3dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:background="@color/accent"
                    android:paddingBottom="15dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/dashboard_cardView_netIncomeLayout">
                        <TextView
                            android:id="@+id/dashboard_cardView_netIncomeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Net Income"
                            android:textColor="@color/textLight"/>
                        <TextView
                            android:id="@+id/dashboard_cardView_netIncomeAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1,800.00"
                            android:textSize="35sp"
                            android:layout_below="@+id/dashboard_cardView_netIncomeTitle"
                            android:textColor="@color/textLight"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dashboard_cardView_average_layout"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/dashboard_cardView_averageTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/textLight"
                                android:text="Average"/>
                            <TextView
                                android:id="@+id/dashboard_cardView_averageAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$1,540.00"
                                android:textSize="25sp"
                                android:textColor="@color/textLight"
                                android:layout_below="@+id/dashboard_cardView_averageTitle"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashboard_cardView_average_layout"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:id="@+id/dashboard_cardView_lastMonthTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/textLight"
                                android:text="Last Month"/>
                            <TextView
                                android:id="@+id/dashboard_cardView_lastMonthAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$1,540.00"
                                android:textSize="25sp"
                                android:textColor="@color/textLight"
                                android:layout_below="@+id/dashboard_cardView_lastMonthTitle"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingTop="@dimen/_90sdp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_below="@+id/expense_toolbarBig">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:id="@+id/dashboard_list_income">
                    <ImageButton
                        android:id="@+id/dashboard_iconUp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:tint="@color/textDark"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_cash_usd_grey600_24dp"/>
                    <TextView
                        android:id="@+id/dashboard_list_incomeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/dashboard_iconUp"
                        android:layout_marginLeft="10dp"
                        android:text="Income"
                        android:textColor="@color/textDarker"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/dashboard_list_incomeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="80dp"
                        android:textColor="@color/textDarker"
                        android:text="$1,700.00"
                        android:textSize="20sp"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="Add"
                        android:textSize="10sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        style="@style/RaisedButton"
                        android:id="@+id/dashboard_iconPlus"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dashboard_list_expenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_below="@+id/dashboard_list_income">
                    <ImageButton
                        android:id="@+id/dashboard_iconDown"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:tint="@color/textDarker"
                        android:scaleType="fitCenter"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_cart_outline_grey600_24dp"/>
                    <TextView
                        android:id="@+id/dashboard_list_expensesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/dashboard_iconDown"
                        android:text="Expenses"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/textDarker"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/dashboard_list_expensesAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="80dp"
                        android:text="$750.00"
                        android:textColor="@color/textDarker"
                        android:textSize="20sp"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="View"
                        android:textSize="10sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        style="@style/RaisedButton"
                        android:id="@+id/dashboard_iconEdit"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dashboard_list_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dashboard_list_expenses"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">
                    <ImageButton
                        android:id="@+id/dashboard_iconCoin"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@null"
                        android:tint="@color/textDarker"
                        android:scaleType="fitCenter"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_coin_grey600_24dp"/>
                    <TextView
                        android:id="@+id/dashboard_list_bankTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/dashboard_iconCoin"
                        android:layout_marginLeft="10dp"
                        android:text="Bank"
                        android:textColor="@color/textDarker"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/dashboard_list_bankAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="80dp"
                        android:text="$6,800.00"
                        android:textColor="@color/textDarker"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="left|start"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/navigationDrawer_header"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/navDrawerHeader">
                <TextView
                    android:id="@+id/navigationDrawer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:text="BuckWise"
                    android:textColor="@color/textLight"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ListView
                android:layout_below="@id/navigationDrawer_header"
                android:id="@+id/navigationDrawer_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:background="@color/navDrawerBody"
                android:dividerHeight="1dp"/>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
